<% @page_title = "Reģistrācija" %>

<div class="header">Jauns lietotājs</div>

<div class="caption">
	<font size="2.5em" face="Monaco" color="orange">Reģistrēties</font>
</div>

<%= error_messages_for :user %>

<% form_for :user, :url => users_path do |f| -%>
	<%= render :partial => "form", :locals => {:f => f} %>
  <p><%= submit_tag "Reģistrēties" %></p>
<% end -%>
