<% @page_pid = {:category => @category} %>
<% @page_title = "Mainīt kategoriju" %>

<div class="header"><%= category_name(@category) %></div>

<div class="caption">
	<font size="2.5em" face="Monaco" color="orange">Mainīt</font>
</div>

<%= error_messages_for :category %>

<% form_for :category, :url => category_path(@category), :html => {:method => :put} do |f| %>
  <%= render :partial => "form", :locals => {:f => f} %>
  <p><%= submit_tag "Izmainīt" %></p>
<% end %>
