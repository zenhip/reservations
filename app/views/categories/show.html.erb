<h2><%= category_name(@category) %></h2>
<p>
	&larr; <%= link_to "atpakaļ", categories_path %> |
	
	<% admin_area do %>
		<%= link_to "mainīt", edit_category_path(@category) %> |
		<%= link_to "dzēst", category_path(@category), :method => :delete, :confirm => "tiešām?!"%> |
		visi produkti |
  	<%= link_to "jauns produkts", new_category_product_path(@category) %>
		&rarr;
  <% end %>
</p>

<table width="100%" border="0" cellspacing="0" cellpadding="0">
<% if @category.products.any? %>
	<tr>
		<th>Produkts</th>
		<th>Daudzums</th>
		<th>Rezervēti</th>
		<th>Brīvi</th>
		<th></th>
	</tr>
	<% @category.products.each do |product| %>
		<% tr do %>
			<td><%= link_to product_name(product), product_path(product) %></td>
			<td><%= product.batches_quantity_total %></td>
			<td><%= product.batches_reserved_total %></td>
			<td><%= product.batches_available_total %></td>
			<td width="60px">
				<% unless  product.batches_available_total <= 0 %>
					<%= link_to "rezervēt", new_product_order_path(product) %>
				<% end %>
			</td>
		<% end %>
	<% end %>
<% else %>
	<p>Šajā kategorijā nav pievienots neviens produkts.</p>
<% end %>
</table>
