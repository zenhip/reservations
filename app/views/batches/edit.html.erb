<font size="2.5em" face="Monaco" color="orange">Mainīt</font>
<h2><%= @batch.arrive_on.to_s(:short_date) %></h2>

<%= error_messages_for :batch %>

<p>
	<b>Produkts:</b> <%= product_name(@batch.product) %><br />
</p>

<% form_for :batch, :url => batch_path(@batch), :html => {:method => :put} do |f| %>
  <%= render :partial => "form", :locals => {:f => f} %>
  <p><%= submit_tag "Izmainīt" %></p>
<% end %>

<p>
	&larr; <%= link_to "atpakaļ", product_batch_path(@batch.product, @batch) %>
</p>