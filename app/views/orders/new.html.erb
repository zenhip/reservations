<% @page_pid = {:category => @product.category, :product => @product} %>
<% @page_title = "Jauna rezervācija" %>

<div class="header"><%= product_name(@product) %></div>

<div class="caption">
	<font size="2.5em" face="Monaco" color="orange">Rezervēt</font>
</div>

<%= error_messages_for :order %>

<p>
	<%= product_availability_info %>
</p>

<% form_for :order, :url => product_orders_path do |f| %>
	<%= render :partial => "form", :locals => {:f => f} %>
  <p><%= submit_tag "Rezervēt" %></p>
<% end %>
