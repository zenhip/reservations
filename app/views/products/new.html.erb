<% @page_title = " - Pievienot jaunu produktu" %>
<% @page_id = "product_category_#{@category.id}" %>

<font size="2.5em" face="Monaco" color="orange">Pievienot</font>
<h2><%= category_name(@category) %></h2>

<%= error_messages_for :product %>

<% form_for :product, :url => category_products_path(:category_id => @category) do |f| %>
  <%= render :partial => "form", :locals => {:f => f} %>
  <p><%= submit_tag "Pievienot" %></p>
<% end %>
